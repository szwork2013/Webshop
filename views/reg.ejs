<% include header %>
   
    <!--注册-->
    <div class="container">
        <span style="color:red"><%= locals.error %></span>
       <div class="reg">
           <form action="" method="POST" role="form">
                <div class="form-group">
                    <label for="">用户名：</label>
                    <input type="text" name="username" class="form-control" placeholder="用户名" required="required">
                </div>
                <div class="form-group">
                    <label for="">口令：</label>
                    <input type="password" name="password" class="form-control" placeholder="密码" required="required">
                </div>
                <div class="form-group">
                    <label for="">再输入一遍口令：</label>
                    <input type="password" name="password_rep" class="form-control" placeholder="再输入一遍密码" required="required">
                </div>
                <br>
                <button type="submit" class="btn btn-primary">注册</button>
                <span>已有账号？请<a href="/login">登陆</a></span>
            </form>
       </div>
    </div>
    <div class="clearfix"></div>
<% include footer %>